pipeline {
    agent any

    stages {
             
        stage('Build') {
            steps {
                sh 'docker-compose build --no-cache'
                }
            }
 
        stage('Deployclone') {
            steps {
                sh 'docker-compose up'
            }
        }
        
        stage('Executing_database') {
            steps {
                sh 'docker run --name demo -e MYSQL_ROOT_PASSWORD=demo -d mysql:latest'
                }
            }
            
         stage('Deploy') {
            steps {
                sh 'docker-compose up'
            }
        }
    }
}
