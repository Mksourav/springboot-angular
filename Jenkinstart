pipeline {
    agent any

    stages {
        
        stage('Build') {
            steps {
                sh 'sudo docker run --name demo -e MYSQL_ROOT_PASSWORD=demo -d mysql:latest'
                }
            }
        
        stage('Build') {
            steps {
                sh 'docker-compose build --no-cache'
                }
            }
 
        stage('Staging') {
            steps {
                sh 'docker-compose up -d'
            }
        }
        
    }
}
